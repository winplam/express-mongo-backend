{
  "name": "express-mongo-backend",
  "version": "1.0.0",
  "description": "Express Mongo Backend Application",
  "main": "./server/server.js",
  "scripts": {
    "dev": "nodemon",
    "dev-env": "env-cmd ./config/dev.env nodemon",
    "test": "jest --watchAll",
    "test-env": "env-cmd ./config/test.env jest --watchAll",
    "test-inband": "jest --watchAll --runInBand --detectOpenHandles",
    "build": "webpack --config webpack.config.client.production.js && webpack --mode=production --config webpack.config.server.js",
    "start": "NODE_ENV=production node ./dist/server.generated.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/winplam/express-mongo-backend.git"
  },
  "homepage": "https://github.com/winplam/express-mongo-backend",
  "keywords": [
    "express",
    "mern",
    "mongodb",
    "mongoose",
    "node",
    "react"
  ],
  "author": "Win Lam",
  "license": "MIT",
  "dependencies": {
    "@hot-loader/react-dom": "^16.13.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-jwt": "^6.0.0",
    "helmet": "^3.23.3",
    "mongoose": "^5.9.25",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-hot-loader": "^4.12.21"
  },
  "devDependencies": {
    "@babel/core": "^7.10.5",
    "@babel/preset-env": "^7.10.4",
    "@babel/preset-react": "^7.10.4",
    "babel-loader": "^8.1.0",
    "jest": "^26.1.0",
    "mongodb-memory-server": "^6.6.1",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "supertest": "^4.0.2",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-middleware": "^3.7.2",
    "webpack-hot-middleware": "^2.25.0",
    "webpack-node-externals": "^2.5.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  }
}
